<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="{x:Type TextBox}"
           x:Key="TaggedTextbox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                        <Grid Width="221" Height="51">
                            <Grid Width="221" Height="37">
                                <Rectangle StrokeThickness="1"/>
                                <TextBox Margin="1"
                                         Text=""
                                         BorderThickness="0"
                                         Background="Transparent"
                                         VerticalContentAlignment="Center"
                                         FontFamily="JetBrains Mono"
                                         FontWeight="light"
                                         Padding="15,5,5,5"
                                         Foreground="#7C6F64"
                                         x:Name="inputBox"/>
                                
                                <TextBlock IsHitTestVisible="False"
                                           Text="{TemplateBinding Text}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           FontFamily="JetBrains Mono"
                                           FontWeight="Light"
                                           Margin="18,0,0,0"
                                           FontSize="12"
                                           Foreground="#7C6F64">
                                    
                                    <TextBlock.Style>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=inputBox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                            <Setter Property="Visibility" Value="Hidden"/>
                                        </Style>
                                    </TextBlock.Style>
                                    
                                </TextBlock>
                            
                               <Rectangle Grid.Row="0" Grid.ColumnSpan="2" Height="1" Width="15" VerticalAlignment="Top" HorizontalAlignment="Left" Fill="#7C6F64"/>
                               <Rectangle Grid.Row="0" Grid.ColumnSpan="2" Height="1" Width="221" VerticalAlignment="Top" HorizontalAlignment="Right" Fill="#7C6F64"/>
                               <Rectangle Grid.Row="0" Grid.ColumnSpan="2" Height="1" VerticalAlignment="Bottom" Fill="#7C6F64"/> 
                               <!-- Vertical Line -->
                               <Rectangle Grid.Row="0" Width="1" HorizontalAlignment="Left" Fill="#7C6F64"/>
                               <Rectangle Grid.Row="0" Width="1" HorizontalAlignment="Right" Fill="#7C6F64"/>
                            </Grid>
                           <TextBlock Text="{TemplateBinding Name}"
                                      FontSize= "12"
                                      FontFamily="JetBrains Mono"
                                      FontWeight="Bold"
                                      FontStyle="Italic"
                                      Background="#F9F5D7"
                                      Foreground="#7C6F64"
                                      Width="auto"
                                      Height="auto"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      Margin="16,0,0,0"/>
                        </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        
    </Style>
</ResourceDictionary>