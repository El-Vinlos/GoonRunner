<Application x:Class="GoonRunner.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             StartupUri="MVVM/View/LogInView.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ControlsDictionary/>
                <ui:ThemesDictionary Theme="Light" />
                <ResourceDictionary Source="pack://application:,,,/Theme/TextboxTheme.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Theme/ButtonTheme.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Theme/WindowControlButton.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Theme/Groupbox.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Theme/MenuButtonTheme.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Theme/NavButtonTheme.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Theme/SidebarButtonTheme.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Theme/GridSplitterTheme.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Theme/ForgotPasswordTheme.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Theme/ErrorMessageTheme.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Theme/DatePickerTheme.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Theme/ComboBox.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Resources/MainResource.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Theme/ListViewTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <!-- Override wpf ui brushes -->
            <SolidColorBrush x:Key="UiBrushDanger" Color="#D53E3E"/>
            <SolidColorBrush x:Key="UiBrushControlFillSecondary" Color="#3C3836"/>
            <!-- Font -->
            <FontFamily x:Key="JetBrains Mono">pack://application:,,,/Assets/Fonts/#JetBrains Mono</FontFamily>
            <FontFamily x:Key="Segoe Fluent Icons">pack://application:,,,/Assets/Fonts/#Segoe Fluent Icons</FontFamily>
         </ResourceDictionary>
    </Application.Resources>
</Application>
