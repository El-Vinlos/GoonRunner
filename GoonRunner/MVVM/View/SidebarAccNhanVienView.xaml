<UserControl x:Class="GoonRunner.MVVM.View.SidebarAccNhanVienView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:gr="clr-namespace:GoonRunner.Utils"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:viewmodel="clr-namespace:GoonRunner.MVVM.ViewModel"
             d:DataContext="{d:DesignInstance Type=viewmodel:SidebarAccNhanVienViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="590" d:DesignWidth="250">
    <Grid>
        <StackPanel>
            <gr:Textbox SetHeader="Mã NV" SetPlaceholder="Nhập mã NV" SetBinding="{Binding MaNV}"/>
            <gr:Textbox SetHeader="Tên hiển thị" SetPlaceholder="Nhập tên hiển thị" SetBinding="{Binding DisplayName}"/>
            <gr:Textbox SetHeader="Tên người dùng" SetPlaceholder="Nhập tên người dùng" SetBinding="{Binding Username}"/>
            <gr:Textbox SetHeader="Mật khẩu" SetPlaceholder="Nhập mật khẩu" SetBinding="{Binding Password}"/>
            <gr:Textbox SetHeader="Xác nhận mật khẩu" SetPlaceholder="Nhập lại mật khẩu" SetBinding="{Binding ConfirmPassword}"/>
            <ComboBox SelectedIndex="0" FontSize="12" BorderBrush="{StaticResource Foreground}" Foreground="{StaticResource Foreground}"
                  Name="Role"
                  gr:Extensions.Header="Quyền hạn"
                  Padding="5,5,0,5"
                  Margin="0,0,0,5"
                  Background="Transparent"
                  ItemsSource="{Binding Roles}"
                  SelectedItem="{Binding SelectedRole, Mode=TwoWay}">
            </ComboBox>

            <Grid HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Name="ButtonAdd"
                        Margin="10"
                        Style="{StaticResource SidebarButton}"
                        Command="{Binding AddAccNhanVienCommand}">
                    <StackPanel>
                        <ui:SymbolIcon Symbol="Add24" FontSize="20"/>
                    </StackPanel>
                </Button>

                <Button Grid.Column="1"
                        Margin="10"
                        Command="{Binding UpdateAccNhanVienCommand}"
                        Style="{StaticResource SidebarButton}"> 
                    <StackPanel>
                        <ui:SymbolIcon Symbol="Pen24" FontSize="20"/>
                    </StackPanel>
                </Button>

                <Button Grid.Column="2"
                        Margin="10"
                        Style="{StaticResource SidebarButton}"
                        FontFamily="../../Assets/Fonts/#Segoe Fluent Icons" FontWeight="Medium" FontSize="20"
                        Command="{Binding ClearFieldCommand}">
                    <StackPanel>
                        <TextBlock Text="" FontFamily="{StaticResource 'Segoe Fluent Icons'}" FontSize="22"/>
                    </StackPanel>
                </Button>

                <Button Grid.Column="3"
                        Margin="10"
                        Style="{StaticResource SidebarButtonDelete}"
                        Command="{Binding DeleteAccNhanVienCommand}">
                    <StackPanel>
                        <ui:SymbolIcon Symbol="Delete24" FontSize="20"/>
                    </StackPanel>
                </Button>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
