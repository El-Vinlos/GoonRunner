<Window x:Class="GoonRunner.MVVM.View.ForgotPasswordView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:GoonRunner.MVVM.ViewModel"
        xmlns:gr="clr-namespace:GoonRunner.Utils"
        d:DataContext="{d:DesignInstance Type=viewmodel:ForgotPasswordViewModel}"
        xmlns:animation="clr-namespace:GoonRunner.Utils" 
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        DataContext="{StaticResource ForgotPassVm}"
        mc:Ignorable="d"
        Name="forgotPassword"
        Height="500" Width="380"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        Icon="/GoonRunner.ico">
    <Window.Resources>
        <SolidColorBrush x:Key="Foreground" Color="#3c3836"/>
        <SolidColorBrush x:Key="Background" Color="#fbf1c7"/>
        
        <Storyboard x:Key="SpinnerStoryboard" RepeatBehavior="Forever">
            <DoubleAnimation
                Storyboard.TargetName="SpinnerRotate"
                Storyboard.TargetProperty="Angle"
                From="0" To="360" Duration="0:0:1"/>
        </Storyboard>
        
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <animation:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid Margin="0,10,0,0"
            Background="{StaticResource Background}">

            <StackPanel Grid.Row="0" Grid.Column="0" 
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">

                <Viewbox Width="235" Margin="0,0,0,30">
                    <Image>
                        <Image.Source>
                            <BitmapImage DecodePixelWidth="300" UriSource="pack://application:,,,/Assets/Logo/GoonRunner.png"/>
                        </Image.Source>
                    </Image>
                </Viewbox>


                <TextBlock Text="Khôi Phục Mật Khẩu"
                           Foreground="{StaticResource Foreground}"
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                           FontFamily="{StaticResource 'JetBrains Mono'}" FontWeight="Medium" FontSize="16"
                           Margin="0,0,0,20" />

                <Grid Width="250">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <gr:Textbox SetHeader="Username"
                                SetPlaceholder="Nhập username muốn khôi phục" 
                                SetBinding="{Binding Username, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"                               
                                Margin="0,0,0,10"/>

                    <GroupBox Grid.Row="1" Style="{StaticResource GroupboxForTextbox}"
                          Header="Password"
                          Margin="0,0,0,10">
                        <Grid>
                            <PasswordBox 
                            Margin="1"
                            BorderThickness="0"
                            Background="Transparent"
                            VerticalContentAlignment="Center"
                            FontFamily="{StaticResource 'JetBrains Mono'}"
                            FontWeight="Light"
                            Padding="3,0,0,5"
                            Foreground="{StaticResource Foreground}"
                            PasswordChar="*"
                            x:Name="Password">
                                        
                            <PasswordBox.Template>
                                <ControlTemplate TargetType="PasswordBox">
                                    <Border Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                        <ScrollViewer x:Name="PART_ContentHost"
                                                      Margin="0"
                                                      VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </PasswordBox.Template>
                        <i:Interaction.Triggers>
                                <i:EventTrigger EventName="PasswordChanged">
                                        <i:InvokeCommandAction Command="{Binding PasswordChangedCommand}"
                                                           CommandParameter="{Binding ElementName=Password}"/>
                                    </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </PasswordBox>
                        
                        <TextBlock IsHitTestVisible="False"
                                   Text="{Binding Placeholder}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   FontFamily="{StaticResource 'JetBrains Mono'}"
                                   FontWeight="Light"
                                   Margin="5,0,0,5"
                                   FontSize="12"
                                   x:Name="Placeholder"
                                   Foreground="#A89984"/>
                    </Grid>
                </GroupBox>
                
                <TextBlock Grid.Row="2" Name="ReturnLogin"
                           Text="Trở về"
                           Margin="0,0,10,10"
                           Style="{StaticResource ForgotPasswordStyle}">
                        <TextBlock.InputBindings>
                            <MouseBinding Command="{Binding ReturnCommand}" CommandParameter="{Binding ElementName=forgotPassword}" MouseAction="LeftClick"/>
                        </TextBlock.InputBindings>
                    </TextBlock>
                </Grid>

                <Button Name="ButtonRecover"
                        Foreground="{StaticResource Background}" Background="#076678"
                        Width="221" Height="61"
                        Margin="0,20,0,0"
                        Style="{StaticResource SigninButton}"
                        Command="{Binding ChangePasswordCommand}"
                        CommandParameter="{Binding ElementName=forgotPassword}"
                        IsDefault="True">
                    <Grid>
                        <TextBlock FontSize="20"
                                   FontWeight="Medium"
                                   Text="Khôi phục"
                                   FontFamily="{StaticResource 'JetBrains Mono'}"
                                   Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                        
                        <Grid Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                              HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Grid.RenderTransform>
                                <RotateTransform x:Name="SpinnerRotate" CenterX="10" CenterY="10"/>
                            </Grid.RenderTransform>
                            <Path Width="20" Height="20" Stretch="Uniform" 
                                  Fill="{StaticResource Background}"
                                  Data="M9.999,0A10,10,0,1,0,20,10,10,10,0,0,0,9.999,0Zm0,3A7,7,0,1,1,3,10,7,7,0,0,1,9.999,3Z"/>
                            <Path Width="20" Height="20" Stretch="Uniform" 
                                  Fill="{StaticResource Background}"
                                  Data="M10,0a10,10,0,0,1,10,10H16A6,6,0,0,0,10,4V0Z"/>
                        </Grid>
                    </Grid>
                </Button>

                <TextBlock Name="ErrorMessageText"
                           MaxWidth="235"
                           TextWrapping="Wrap"
                           Margin="0,5,0,0"
                           Text="{Binding ErrorMessage}"
                           Style="{StaticResource ErrorMessageStyle}"/>

            </StackPanel>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>


                <Rectangle Width="auto" Height="auto" PreviewMouseLeftButtonDown="DragMoving" Fill="Transparent"/>

                <Button Grid.Row="0" Grid.Column="1" Width="auto" Height="auto"                       
                       FontFamily="../../Assets/Fonts/#Segoe Fluent Icons" FontWeight="Medium" FontSize="12"
                       BorderThickness="0"
                       Cursor="Hand"
                       Click="MinimizedOnClick"
                       Style="{StaticResource WindowControlButton}">
                    
                </Button>
                <Button Grid.Row="0" Grid.Column="2" Width="auto" Height="auto"
                       Style="{StaticResource WindowControlButton}"/>

                <Button Grid.Row="0" Grid.Column="2" Width="auto" Height="auto"
                       FontFamily="../../Assets/Fonts/#Segoe Fluent Icons" FontWeight="Medium" FontSize="12"
                       BorderThickness="0"
                       Cursor="Hand"
                       Click="ClosedOnClick"
                       Style="{StaticResource CloseButton}">
                    
                </Button>
            </Grid>

            <!-- Horizontal Line -->
            <Rectangle Grid.Row="0" Height="2" Width="14" VerticalAlignment="Top" HorizontalAlignment="Left" Fill="{StaticResource Foreground}"/>
            <Rectangle Grid.Row="0" Height="2" Width="300" VerticalAlignment="Top" HorizontalAlignment="Right" Fill="{StaticResource Foreground}"/>
            <Rectangle Grid.Row="0" Height="2" VerticalAlignment="Bottom" Fill="{StaticResource Foreground}"/>
            <!-- Vertical Line -->
            <Rectangle Grid.Row="0" Width="2" HorizontalAlignment="Left" Fill="{StaticResource Foreground}"/>
            <Rectangle Grid.Row="0" Width="2" HorizontalAlignment="Right" Fill="{StaticResource Foreground}"/>


        </Grid>
        <TextBlock Text="Recover"
                   FontSize="16" FontFamily="{StaticResource 'JetBrains Mono'}" FontWeight="Bold"
                   Foreground="{StaticResource Foreground}"
                   Width="auto" Height="auto"
                   HorizontalAlignment="Left" VerticalAlignment="Top"
                   Margin="16,0,0,0" PreviewMouseDown="DragMoving"/>

    </Grid>
</Window>