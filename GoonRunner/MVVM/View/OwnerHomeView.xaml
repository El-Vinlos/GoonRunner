<UserControl x:Class="GoonRunner.MVVM.View.OwnerHomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:gr="clr-namespace:GoonRunner.CustomControl"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:GoonRunner.MVVM.View"
             xmlns:viewmodel="clr-namespace:GoonRunner.MVVM.ViewModel"
             d:DataContext="{d:DesignInstance Type=viewmodel:OwnerHomeViewModel}"
             DataContext="{StaticResource OwnerHomeVM}"
             mc:Ignorable="d"
             d:DesignHeight="590" d:DesignWidth="755">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <GroupBox Grid.Row="0" 
                      Grid.Column="0" 
                      Style="{StaticResource GroupBoxGoonRunner}" 
                      Header="Lương" Foreground="#427B58">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" MinWidth="10" MaxWidth="30"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*" MinWidth="10" MaxWidth="30"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" MinHeight="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*" MinHeight="10"/>
                    </Grid.RowDefinitions>
                    <DatePicker Grid.Column="1"
                                gr:Extensions.Header="Chọn ngày"
                                VerticalContentAlignment="Center"
                                Foreground="#3c3836" 
                                BorderBrush="#3c3836"
                                FontFamily="pack://application:,,,/Assets/Fonts/#JetBrains Mono"
                                Margin="0,0,0,5" 
                                SelectedDate="{Binding SelectedDate, Mode=TwoWay}"/>
                    <TextBlock Grid.Column="1" Text="{Binding HienThiDoanhThu, Mode=TwoWay}" Grid.Row="1" Foreground="#427B58" FontSize="30" Margin="10,0,0,0"/>
                </Grid>
            </GroupBox>
            <GroupBox Grid.Row="0" Grid.Column="1" Style="{StaticResource GroupBoxGoonRunner}" Header="Tình Trạng" Foreground="#D53E3E">
                <Grid HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" MinHeight="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*" MinHeight="10"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Số sản phẩm sắp hết hàng" 
                               Grid.Row="1" 
                               HorizontalAlignment="Center"
                               Foreground="#D53E3E"  
                               FontFamily="#JetBrains Mono"/>
                    <TextBlock Text="0" 
                               Grid.Row="2" 
                               HorizontalAlignment="Center"
                               Foreground="#D53E3E"  
                               FontFamily="#JetBrains Mono" 
                               FontWeight="Bold" 
                               FontSize="32"/>
                </Grid>
            </GroupBox>
            <GroupBox Grid.Row="0" Grid.Column="2" Style="{StaticResource GroupBoxGoonRunner}" Header="Xếp Hạng" Foreground="#D79921">
                <Grid HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" MinHeight="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*" MinHeight="10"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Tháng này"
                               Grid.Row="1" Grid.Column="1" 
                               Foreground="#D79921" 
                               FontFamily="#JetBrains Mono" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Tháng Trước" 
                               Grid.Row="1" Grid.Column="3" 
                               Foreground="#D79921" 
                               FontFamily="#JetBrains Mono" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="1" 
                               Grid.Row="2" Grid.Column="1" 
                               Foreground="#D79921" 
                               FontFamily="#JetBrains Mono" 
                               FontSize="30"
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="7" 
                               Grid.Row="2" Grid.Column="3" 
                               Foreground="#D79921" 
                               FontFamily="#JetBrains Mono" 
                               FontSize="30"
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"/>
                </Grid>
            </GroupBox>
            <GroupBox Grid.Row="0" Grid.Column="3" Style="{StaticResource GroupBoxGoonRunner}" Header="KPI" Foreground="#98971A">
                <Grid HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" MinHeight="10"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*" MinHeight="10"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Đơn bán được" 
                               Grid.Row="1" Grid.Column="1" 
                               Foreground="#98971A" 
                               FontFamily="#JetBrains Mono" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Đơn cần bán"
                               Grid.Row="1" Grid.Column="3" 
                               Foreground="#98971A" 
                               FontFamily="#JetBrains Mono" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="50" 
                               Grid.Row="2" Grid.Column="1" 
                               FontSize="30" 
                               Foreground="#98971A" 
                               FontFamily="#JetBrains Mono" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="50" Grid.Row="2" Grid.Column="3" 
                               FontSize="30" 
                               Foreground="#98971A" 
                               FontFamily="#JetBrains Mono" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"/>
                </Grid>
            </GroupBox>
        </Grid>
        <Grid Grid.Row="1" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <GroupBox Grid.ColumnSpan="2" Style="{StaticResource GroupBoxGoonRunner}" Header="Đơn bán được trong 12 tháng">
                <Image Source="/Assets/Images/nen1.png"/>
            </GroupBox>
            <GroupBox Grid.Column="2" Style="{StaticResource GroupBoxGoonRunner}" Header="Sản Phẩm Bán Chạy">
                <Image Source="/Assets/Images/nen2.png"/>
            </GroupBox>
        </Grid>
        <Grid Grid.Row="3">
            <GroupBox Grid.Row="0" Style="{StaticResource GroupBoxGoonRunner}" Header="Lịch Làm">
                <Grid ShowGridLines="True" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*" MinHeight="30"/>
                        <RowDefinition Height="*" MinHeight="30"/>
                        <RowDefinition Height="*" MinHeight="30"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>

                    <!-- Hàng tiêu đề -->
                    <TextBlock Text="Ca làm" Grid.Row="0" Grid.Column="0" FontWeight="Bold" HorizontalAlignment="Center" />
                    <TextBlock Text="Thứ 2" Grid.Row="0" Grid.Column="1" FontWeight="Bold" HorizontalAlignment="Center" />
                    <TextBlock Text="Thứ 3" Grid.Row="0" Grid.Column="2" FontWeight="Bold" HorizontalAlignment="Center" />
                    <TextBlock Text="Thứ 4" Grid.Row="0" Grid.Column="3" FontWeight="Bold" HorizontalAlignment="Center" />
                    <TextBlock Text="Thứ 5" Grid.Row="0" Grid.Column="4" FontWeight="Bold" HorizontalAlignment="Center" />
                    <TextBlock Text="Thứ 6" Grid.Row="0" Grid.Column="5" FontWeight="Bold" HorizontalAlignment="Center" />
                    <TextBlock Text="Thứ 7" Grid.Row="0" Grid.Column="6" FontWeight="Bold" HorizontalAlignment="Center" />
                    <TextBlock Text="Chủ Nhật" Grid.Row="0" Grid.Column="7" FontWeight="Bold" HorizontalAlignment="Center" />

                    <!-- Sáng -->
                    <TextBlock Text="Sáng" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    <Border Background="#076678" Grid.Row="1" Grid.Column="1"/>
                    <Border Background="#076678" Grid.Row="1" Grid.Column="4"/>
                    <Border Background="#076678" Grid.Row="1" Grid.Column="6"/>

                    <!-- Chiều -->
                    <TextBlock Text="Chiều" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    <Border Background="#076678" Grid.Row="2" Grid.Column="2"/>
                    <Border Background="#076678" Grid.Row="2" Grid.Column="4"/>
                    <Border Background="#076678" Grid.Row="2" Grid.Column="5"/>

                    <!-- Tối -->
                    <TextBlock Text="Tối" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    <Border Background="#076678" Grid.Row="3" Grid.Column="4"/>
                    <Border Background="#076678" Grid.Row="3" Grid.Column="5"/>
                    <Border Background="#076678" Grid.Row="3" Grid.Column="6"/>
                </Grid>

            </GroupBox>
        </Grid>
    </Grid>
</UserControl>
