<UserControl x:Class="GoonRunner.MVVM.View.SidebarChiTietPhieuNhapHangView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:gr="clr-namespace:GoonRunner.CustomControl"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:viewmodel="clr-namespace:GoonRunner.MVVM.ViewModel"
             d:DataContext="{d:DesignInstance Type=viewmodel:SidebarChiTietPhieuNhapHangViewModel}"
             DataContext="{StaticResource SidebarChiTietPhieuNhapHangVM}"
             mc:Ignorable="d"
             d:DesignHeight="590" d:DesignWidth="250">
    <Grid>
        <StackPanel>
            <gr:Textbox SetHeader="Mã PNH" SetPlaceholder="Nhập mã PNH" SetBinding="{Binding MaPNH, Mode=TwoWay}"/>
            <gr:Textbox SetHeader="Mã SP" SetPlaceholder="Nhập mã SP" SetBinding="{Binding MaSP}"/>
            <gr:Textbox SetHeader="Tên SP" SetPlaceholder="Nhập tên SP" SetBinding="{Binding TenSP}"/>
            <gr:Textbox SetHeader="Số lượng" SetPlaceholder="Nhập số lượng" SetBinding="{Binding SoLuongNhap}"/>
            <gr:Textbox SetHeader="Đơn giá" SetPlaceholder="Nhập đơn giá" SetBinding="{Binding DonGia}"/>

            <Grid HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                            Margin="10"
                            Style="{StaticResource SidebarButton}"
                            Command="{Binding AddChiTietPhieuNhapHangCommand}">
                    <StackPanel>
                        <ui:SymbolIcon Symbol="Add24" FontSize="20"/>
                    </StackPanel>
                </Button>

                <Button Grid.Column="1"
                            Margin="10"
                            Style="{StaticResource SidebarButton}">
                    <StackPanel>
                        <ui:SymbolIcon Symbol="Pen24" FontSize="20"/>
                    </StackPanel>
                </Button>

                <Button Grid.Column="2"
                            Margin="10"
                            Style="{StaticResource SidebarButtonDelete}">
                    <StackPanel>
                        <ui:SymbolIcon Symbol="Delete24" FontSize="20"/>
                    </StackPanel>
                </Button>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>