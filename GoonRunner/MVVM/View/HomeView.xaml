<UserControl x:Class="GoonRunner.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GoonRunner.MVVM.View"
             mc:Ignorable="d"
             d:DesignHeight="590" d:DesignWidth="755">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <GroupBox Grid.Row="0" Grid.Column="0" Style="{StaticResource GroupBoxGoonRunner}" Header="Lương"></GroupBox>
            <GroupBox Grid.Row="0" Grid.Column="1" Style="{StaticResource GroupBoxGoonRunner}" Header="Tình Trạng"></GroupBox>
            <GroupBox Grid.Row="0" Grid.Column="2" Style="{StaticResource GroupBoxGoonRunner}" Header="Xếp Hạng"></GroupBox>
            <GroupBox Grid.Row="0" Grid.Column="3" Style="{StaticResource GroupBoxGoonRunner}" Header="KPI"></GroupBox>
        </Grid>
        <Grid Grid.Row="1" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <GroupBox Grid.ColumnSpan="2" Style="{StaticResource GroupBoxGoonRunner}" Header="Đơn bán được trong 12 tháng"></GroupBox>
            <GroupBox Grid.Column="2" Style="{StaticResource GroupBoxGoonRunner}" Header="Sản Phẩm Bán Chạy"></GroupBox>
        </Grid>
        <Grid Grid.Row="3">
            <GroupBox Grid.Row="0" Style="{StaticResource GroupBoxGoonRunner}" Header="Lịch Làm"></GroupBox>
        </Grid>
    </Grid>
</UserControl>
